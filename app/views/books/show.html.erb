
<% if flash[:notice] %>
   <p class="notice">
      Book was <%= flash[:notice] %> created.
   </p>
<% end %>


<div class="text">
  <p>
    <strong>Title:</strong>
     <%= @book.title %>
  </p>

  <p>
     <strong>Body:</strong>
    <%= @book.body %>
  </p>
</div>

<div>
  <%= link_to "Edit", edit_book_path(@book.id) %> |
  <%= link_to "Back", books_path %>
</div>