<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book, url: update_path(@book.id), method: :patch do |f| %>

<form>
  <div class="field">
    <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
    <label class="book_body">Body</label>
  <%= f.text_area :body %>
  /div>

  <div class="action"><%= f.submit 'Update Book' %></div>

</form>

  <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", index_path %></p>

<% end %>